@model BookList.Models.Book
@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<hr />

<div class="row form-border">
    <div class="form-group">
        <div class="row">
            <div class="col-sm-1">
                <label asp-for="Name"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <a asp-route-id="@Model.ID" class="btn btn-sm btn-primary" asp-action="Edit">Edit</a>
        <a asp-action="Index" class="btn btn-sm btn-success">Back To Book List</a>
    </div>
</div>

